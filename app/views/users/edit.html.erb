<%= form_with model: @user, local:true do |f| %>

<div>
  <%= render 'layouts/errors', obj: @user %>
</div>
  <%= f.attachment_field :profile_image %>

    <table class="table table-borderless">

          <tbody>
            <tr>
              <th>名前</th>
              <th>
                <div class="field">
                  <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
                </span>
                </div>
              </th>
            </tr>
          </tbody>

          <tbody>
            <tr>
              <th>ニックネーム</th>
              <th>
                <div class="field">
                  <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname" %>
                </span>
                </div>
              </th>
            </tr>
          </tbody>

          <tbody>
            <tr>
              <th>メールアドレス</th>
              <th>
                <div class="field">
                  <%= f.email_field :email, :size=>"55", autofocus: true, autocomplete: "email" %>
                </div>
              </th>
            </tr>
          </tbody>

      </table>
    <div>
      <%= f.submit "変更する", class: "btn btn-info active" %>
    </div>

  </div>
</div>
<% end %>