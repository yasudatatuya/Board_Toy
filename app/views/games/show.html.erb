<div class="container">
  <div class="row">
    <div class="col-lg-5">
      <%= attachment_image_tag @game, :image, :fill, 300, 200, format: 'jpeg' %>
    </div>

    <div class="col-lg-7">
      <table class="table table-borderless">

        <tbody>
            <tr>
              <th>ゲーム名</th>
              <th>
                <div class="field">
                  <%= @game.name %>
                  <% if user_signed_in? && Like.like_method(@game, current_user) %>
                    <%= link_to 'お気にいり解除',  game_like_path(@game), method: :delete %>
                  <% elsif user_signed_in? %>
                    <%= link_to 'お気にいり登録',  game_likes_path(@game), method: :post %>
                  <% else %>
                  <% end %>


                </div>
              </th>
            </tr>
          </tbody>

        <tbody>
            <tr>
              <th>商品説明</th>
              <th>
                <div class="field">
                  <%= @game.introduction %>
                </div>
              </th>
            </tr>
          </tbody>

        <tbody>
            <tr>
              <th>推定価格</th>
              <th>
                <div class="field">
                    約<%= @game.price %>円
                </div>
              </th>
            </tr>
          </tbody>

        <tbody>
            <tr>
              <th>推定プレイ時間</th>
              <th>
                <div class="field">
                  <%= @game.play_timemin %>～<%= @game.play_timemax %>分
                </div>
              </th>
            </tr>
          </tbody>

        <tbody>
            <tr>
              <th>プレイ人数</th>
              <th>
                <div class="field">
                  <%= @game.number_min %>以上<%= @game.number_max %>以下
                </div>
              </th>
            </tr>
          </tbody>
      </table>
    </div>

    <div class="col-lg-12">
      <table class="table table-borderless">
        <% @game.game_comments.each do |gamecomment| %>
        <tbody>
            <tr>
              <th>名前</th>
              <th>
                <div class="field">
                  <%= link_to user_likes_path(gamecomment.user_id) do %>
                    <%= gamecomment.user.nickname %>
                  <% end %>

                  <%= gamecomment.usefuls.count %>人がこれが役に立ったと考えています
                </div>
              </th>
            </tr>
          </tbody>

          <tbody>
            <tr>
              <th>タイトル</th>
              <th>
                <div class="field">
                  <%= gamecomment.title %>
                </div>
              </th>
            </tr>
          </tbody>
          <tbody>
          <tbody>
            <tr>
              <th>コメント</th>
              <th>
                <div class="field">
                  <%= gamecomment.comment %>
                </div>
              </th>
            </tr>
          </tbody>

          <tbody>
            <tr>
              <th>星の数</th>
              <th>
                <div class="field">
                  <!--星評価-->
         <div id="star-rate-<%= gamecomment.id %>"></div>
          <script>
          $('#star-rate-<%= gamecomment.id %>').raty({
            size: 36,
            starOff:  '<%= asset_path('star-off.png') %>',
            starOn : '<%= asset_path('star-on.png') %>',
            starHalf: '<%= asset_path('star-half.png') %>',
            half: true,
            readOnly: true,
            score: <%= gamecomment.rate %>,
          });
          </script>
        <!--/星評価-->

                </div>
              </th>
            </tr>
          </tbody>
          <tbody>
            <tr>
              <th>show</th>
              <th>
                <div class="field">
                  <% if current_user == gamecomment.user %>
                    <%= link_to '編集', edit_game_comment_path(gamecomment) , class: "btn-block btn btn-outline-warning"%>
                  <% end %>
                </div>
              </th>
            </tr>
          </tbody>
           <tbody>
            <tr>
              <th>役に立った</th>
              <th>
                <div class="field">
                  <% if gamecomment.useful_by(current_user) %>
                    フィードバックをお寄せいただきありがとうございます。
                  <% else %>
                    <%= link_to '役に立った', game_comment_useful_index_path(gamecomment) , method: :post %>
                  <% end %>
                </div>

                </div>
              </th>
            </tr>
          </tbody>



        <% end %>
      </table>
    </div>
  </div>
</div>



<% if user_signed_in? %>
  <% if current_user.management_permissions ==true %>
    <%= link_to 'コメントする', new_game_game_comment_path(@game.id) , class: "btn-block btn btn-outline-warning"%>
    <%= link_to '一覧に戻る',  games_path, class: "btn-block btn btn-outline-warning"%>
    <%= link_to '編集する',  edit_game_path(@game), class: "btn-block btn btn-outline-warning"%>
    <%= link_to '削除する',  game_path(@game),method: :delete, data: { confirm: '本当に削除しますか？'}, class: "btn-block btn btn-outline-warning"%>
  <% else %>
    <%= link_to 'コメントする', new_game_game_comment_path(@game.id) , class: "btn-block btn btn-outline-warning"%>
    <%= link_to '前に戻る',  :back, class: "btn-block btn btn-outline-warning"%>
  <% end %>
<% else %>
<%= link_to '前に戻る',  :back, class: "btn-block btn btn-outline-warning"%>
<% end %>