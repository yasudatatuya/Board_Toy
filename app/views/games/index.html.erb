<div class="container">
  <div class="row">
    <h3>ジャンル</h3>

    <%= search_form_for @q do |f| %>

      <%= f.search_field :name_cont %>
      <%= f.number_field :price_lteq %>
      <%= f.number_field :play_timemin_gteq %>以上〜
      <%= f.number_field :play_timemax_lteq %>以下
      <%= f.number_field :number_min_gteq %>以上〜
      <%= f.number_field :number_max_lteq %>以下〜
      <%= f.submit "検索" %>
    <% end %>


      <div class="flex_row">
      <% @games.each do |game| %>
      <div class="flex_column">
      <%= link_to game_path(game.id) do %>
        <div>
          <%= attachment_image_tag game, :image, size: '200x200' %>
        </div>
        <div>
          <%= game.name %>
        </div>
        <div>
          <%= game.genre %>
        </div>
      </div>
      <% end %>
      <% end %>
      </div>
  </div>
</div>